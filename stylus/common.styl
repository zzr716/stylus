$bg_color = #f5f5f5
$base_font = 'Open Sans', sans-serif
$base_color = #ff3c41
$header_image = 'https://images.unsplash.com/photo-1440613905118-99b921706b5c?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=255b304482a2f50d0917f3de7b06251e'
border-radius()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments
*
  margin 0
  padding 0
html, body
  min-height 100%
  height 100%
body
  background $bg_color
  font-family $base_font
  font-size 14px
.clearfix
  overflow auto
  zoom 1
.container
  height 100%
  display flex
  justify-content center
  align-items center
  flex-flow row wrap
.todo-wrapper
  background #fff
  width 350px
  box-shadow 0 0 40px rgba(0,0,0, .1)
  border-radius(6px)
.todo-header // header 模块
  border-radius(6px)
  background url($header_image) no-repeat
  background-size cover
  padding 50px 20px
  position relative
  .overlay
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0,0,0,.2)
    border-radius(6px)
  time
    color #fff
    display block
    position relative
    .day
      font-size 4em
      float left
      margin-right 10px
    .dayofweek
      display block
      margin-top 13px
      font-size 1.4em
      font-weight 700
  .add-circle
    position absolute
    background $base_color
    color white
    border-radius(50%)
    width 40px
    height 40px
    line-height 40
    text-align center
    right 20px
    bottom -20px
    box-shadow 0 0 13px rgb(255, 60, 65)
    cursor pointer
